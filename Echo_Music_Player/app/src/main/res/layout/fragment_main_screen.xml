<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/visible_layout"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/content_main"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:id="@+id/hiddenBarMainScreen"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:layout_height="100dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/pause_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="31dp"
                android:id="@+id/play_pause_button"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/defaultMusic"
                android:layout_marginLeft="13dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/now_playing_bar_eq_image"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:textColor="#bdbdbd"
                android:layout_toRightOf="@id/defaultMusic"
                android:id="@+id/now_playing"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/songTitleMainScreen"
                android:layout_below="@+id/now_playing"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="160dp"
                android:text="..."
                android:layout_alignStart="@id/now_playing"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignLeft="@id/now_playing"
                android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:visibility="invisible"
        android:id="@+id/noSongs"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="You do not have any Song at at the moment"/>
    </RelativeLayout>
</RelativeLayout>