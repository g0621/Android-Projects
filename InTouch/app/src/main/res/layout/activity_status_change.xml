<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyan.intouch.activities.StatusChangeActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/statuspage_appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_below="@+id/statuspage_appbar"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:layout_marginTop="30dp">


        <EditText
            android:id="@+id/change_status_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hero_button"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Whats going On !!"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="?attr/colorAccent"
            android:fontFamily="casual"
            android:text="ok"
            android:onClick="changetheStatus"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
